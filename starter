import pygame
import sys
from map import Map
def run():
    pygame.init()
    screen = pygame.display.set_mode((1000,667))
    pygame.display.set_caption("Battle For Rakugan")
    backgroung_color = (255,255,255)
    mapp = Map(screen)

    while True:
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                sys.exit()
        screen.fill(backgroung_color)
        mapp.output()
        pygame.display.flip()

run()
